- set_headline "Image: #{h @image.image.identifier}"

%div.uploaded_image#full
  %h2 Full Size 
  = image_tag(@image.image.url)
  %br

  = link_to(@image.image.identifier, @image.image.url)
  %br

  %input{:type => 'text', :value => @image.image.url, :size => 80}
  %br

- ImageUploader.versions.each_key do |style|
  %div.uploaded_image{:id => style}
    %h2= style.to_s.capitalize
    = image_tag(@image.image.send(style).url)
    %br

    = link_to(@image.image.identifier, @image.image.send(style).url)
    %br

    %input{:type => 'text', :value => @image.image.send(style).url, :size => 80}
    %br

= link_to 'Back', admin_upload_images_path
