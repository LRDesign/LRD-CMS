- set_headline "Listing images"

= link_to 'New image', new_admin_image_path
%br

%table.listing
  %tr

  - for image in @images
    %tr
      %td= image_tag(image.image.url(:icon))
      %td= image.image_file_name
      %td= link_to 'Show', admin_image_path(image)
      %td= link_to 'Destroy', admin_image_path(image), :data => {:confirm => 'Are you sure?'}, :method => :delete

