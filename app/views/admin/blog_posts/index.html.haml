- set_headline "Listing Blog Posts"

= link_to 'New Blog Post', new_admin_blog_post_path
%br

%table.listing
  %tr
    %th Published
    %th Title
    %th Path

  - @pages.each do |page|
    = content_tag_for :tr, page do
      %td= bool_checked page.published
      %td= link_to page.title, page_path(page)
      %td= page.permalink
      %td= link_to 'Edit', edit_admin_blog_post_path(page)
      %td= link_to 'Delete', admin_blog_post_path(page), :data => {:confirm => 'Are you sure?'}, :method => :delete
