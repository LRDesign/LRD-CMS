
<html ng-app>

  %head{"ng-controller" => "PageInfoController"}
    %meta{"http-equiv" => "content-type", "content" => "text/html;charset=UTF-8" }
    - if content_for?(:keywords)
      %meta{"name" => "keywords", "content" => yield(:keywords)}
    - if content_for?(:description)
      %meta{"name" => "description", "content" => yield(:description)}

    %title=  @title ? @title : "Logical Reality Design Default CMS Framework"

    = stylesheet_link_tag 'universal', :media=>'all'
    = stylesheet_link_tag 'screen', :media=>'screen, projection'
    = stylesheet_link_tag 'print', :media=>'print'

    - if Rails.env.production?
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
      = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"
    -else
      = javascript_include_tag "jquery-1.4.2.min.js"
      = javascript_include_tag "jquery-ui-1.8.4.min.js"
      = javascript_include_tag "rails.js"
      = javascript_include_tag "jquery.ninja_script.js"

    = javascript_include_tag 'application.js'
    = javascript_include_tag 'logical_tabs_jquery'
    = include_tiny_mce_if_needed

    = csrf_meta_tag

    %style{ :type => 'text/css', :media => 'screen, projection', "ng-controller" => "PageContainer Controller" }
      = yield :page_css

    = yield :header

  %body{ :class => admin? ? 'with_admin' : nil }
    = render :partial => 'layouts/admin_nav' if admin?
    %div{"ng-view"}
